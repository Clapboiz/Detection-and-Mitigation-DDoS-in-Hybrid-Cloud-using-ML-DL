    <script>
        const initLocalStorage = (drinks) => {
            localStorage.setItem("drinks", JSON.stringify(drinks));
        }
        const update = (drinks) => {
            let thanhtien = 0;
            $(".list-hang").empty();
            $(".giohang .thanhtien b").text("");
            for (const key in drinks) {
                if (drinks.hasOwnProperty(key)) {
                    console.log(`${key}`, drinks[key]);
                    let newdon = createNewDon(drinks[key].soluong, drinks[key].name, drinks[key].price);
                    $(".list-hang").append(newdon);
                    thanhtien += drinks[key].price;
                    $(".giohang .thanhtien b").text(thanhtien);
                }
            }
        }

        let drinks = {};
        let thanhTien = 0;
        if (localStorage.getItem("drinks")) {
            drinks = JSON.parse(localStorage.getItem("drinks"));
        }
        initLocalStorage(drinks);
        update(drinks);

        // Init the localStorage with the drinks
        // After every press, reinit the drinks
        // Thanh tien will be calculated on the fly 

        function createNewDon(soluong, ten, gia) {
            let quantity = soluong;
            let name = ten;
            let price = gia;
            let $newDon = $(
                `
                <div class="donhang">
                    <div class="left">
                        <span class="soluong orange-bg">${quantity}</span>
                        <span class="ten">${name}</span>
                    </div>
                    <span class="tien">${price}</span>
                </div>
                `
            );

            return $newDon;
        }

        $(document).ready(function () {
            $(".xoagiohang").click(function () {
                drinks = {};
                initLocalStorage(drinks);
                update(drinks);
            })

            $(".themvaogiohang").click(function () {
                const itemId = $(this).closest(".item").attr('id');
                const itemName = $(this).closest(".item").find(".name").text();
                //const itemPrice = parseInt($(this).closest(".item").find(".gia").text().split(" ")[0]);
                const itemPrice = parseInt($(this).closest(".item").find(".gia").data("id"));
                let soluong = parseInt($(this).closest(".item").find("input").val());
                //let newdon = createNewDon(soluong, itemName, itemPrice);

                if(drinks[itemId]) soluong += parseInt(drinks[itemId].soluong);

                drinks[itemId] = {
                    name: itemName,
                    price: itemPrice*soluong,
                    soluong: soluong,
                };

                console.log(drinks);
                initLocalStorage(drinks);
                update(drinks);
            });
        });
    </script>
